# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/recovery-connect

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=7d

# Firebase Admin SDK Configuration
# These values should be replaced with your actual Firebase project details
# Located in Google Drive in Recovery Connect folder
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_CLIENT_ID=
FIREBASE_AUTH_URI=
FIREBASE_TOKEN_URI=
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=
FIREBASE_CLIENT_X509_CERT_URL=
FIREBASE_UNIVERSE_DOMAIN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # Maximum 100 requests per IP in the window

# Logging
LOG_LEVEL=info

# API Version
API_VERSION=v1